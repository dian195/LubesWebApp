                        <div class="input-group input-group-merge">
                            <input type="password" id="old-password" class="form-control" name="old-password" placeholder="············" aria-describedby="old-password">
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>
