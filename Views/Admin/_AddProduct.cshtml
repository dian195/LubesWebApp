@model WebApp.Models.AddSeriesMasterDTO

<!-- Modals New Product -->
<div class="modal fade" id="addProducts" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form method="post" action="NewProduct" autocomplete="off">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    @if (ViewBag.Message != null)
                    {
                        <div class="row g-md-2">
                            <div class="col-md-12 mb-3">
                                <div class="alert alert-success mt-4" role="alert">@ViewBag.Message</div>
                            </div>
                        </div>
                    }
                    <div class="row g-md-2">
                        <div class="col-md-6 mb-3">
                            <label for="seriesId" class="form-label">Series Id<span asp-validation-for="seriesId" class="text-danger"></span></label>
                            <input type="text" id="seriesId" asp-for="seriesId" class="form-control" placeholder="Enter Id" maxlength="3">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="productName" class="form-label">Product Name<span asp-validation-for="productName" class="text-danger"></span></label>
                            <input type="text" asp-for="productName" id="productName" class="form-control" placeholder="Enter Product Name" maxlength="100">
                        </div>
                    </div>
                    <div class="row g-md-2">
                        <div class="col-md-6 mb-3">
                            <label for="productPackaging" class="form-label">Product Packaging<span asp-validation-for="productPackaging" class="text-danger"></span></label>
                            <select id="ddlProdPackaging" class="form-select" onchange="packageChange(this)" asp-for="productPackaging">
                                <option value="0" disabled>-- Select Packaging --</option>
                                <option value="LITHOS">LITHOS</option>
                                <option value="DRUM">DRUM</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="productVolume" class="form-label">Product Volume<span asp-validation-for="productVolume" class="text-danger"></span></label>
                            <input type="text" asp-for="productVolume" id="productVolume" class="form-control" placeholder="Enter Product Value" maxlength="100">
                        </div>
                    </div>
                    <div class="row g-md-2">
                        <div class="col-md-12 mb-3">
                            <!-- Error Notif Here -->
                            @if ((ViewData["ErrorMessage"] == null ? "" : ViewData["ErrorMessage"].ToString().Trim()) != "")
                            {
                                <div class="alert alert-danger mt-4" role="alert">@ViewData["ErrorMessage"]</div>
                            }

                            @if ((ViewData["SuccessMessage"] == null ? "" : ViewData["SuccessMessage"].ToString().Trim()) != "")
                            {
                                <div class="alert alert-success mt-4" role="alert">@ViewData["SuccessMessage"]</div>
                            }
                            <input type="hidden" value="" name="testing" id="testing" />
                            <input type="hidden" name="pckIDhdn" asp-for="productPackaging" />
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal" id="btnSave">Submit</button>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    function packageChange(ddl) {
        var selectedText = ddl.options[ddl.selectedIndex].innerHTML;
        document.getElementsByName("pckIDhdn")[0].value = selectedText;
    }
</script>