@model WebApp.Models.UpdatePassProfileDTO

<!-- Modals New User -->
<div class="modal fade" id="editUser" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Change Password User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form method="post" action="ChangePasswordUser" autocomplete="off">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    @if (ViewBag.Message != null)
                    {
                        <div class="row g-md-2">
                            <div class="col-md-12 mb-3">
                                <div class="alert alert-success mt-4" role="alert">@ViewBag.Message</div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col mb-3 form-password-toggle">
                            <label class="form-label" for="old-password">Old Password</label>
                            <div class="input-group input-group-merge">
                                <input type="password" id="old-password" class="form-control" asp-for="oldpass" placeholder="············" aria-describedby="old-password">
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3 form-password-toggle">
                            <label class="form-label" for="password">Password</label>
                            <div class="input-group input-group-merge">
                                <input type="password" id="password" class="form-control" asp-for="newpass" placeholder="············" aria-describedby="password">
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3 form-password-toggle">
                            <label class="form-label" for="password-confirmation">Password Confirmation</label>
                            <div class="input-group input-group-merge">
                                <input type="password" id="password-confirmation" class="form-control" asp-for="confirmpass" placeholder="············" aria-describedby="password-confirmation">
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row g-md-2">
                        <div class="col-md-12 mb-3">
                            <!-- Error Notif Here -->
                            @if ((ViewData["ErrorMessage"] == null ? "" : ViewData["ErrorMessage"].ToString().Trim()) != "")
                            {
                                <div class="alert alert-danger mt-4" role="alert">@ViewData["ErrorMessage"]</div>
                            }

                            @if ((ViewData["SuccessMessage"] == null ? "" : ViewData["SuccessMessage"].ToString().Trim()) != "")
                            {
                                <div class="alert alert-success mt-4" role="alert">@ViewData["SuccessMessage"]</div>
                            }
                            <input type="hidden" asp-for="usrId" />
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal" id="btnSave">Save</button>
            </div>

        </div>
    </div>
</div>