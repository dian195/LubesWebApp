@model WebApp.Models.DashboardDTO;
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Dashboard | Lubes";
}

<div class="container-fluid flex-grow-1 container-p-y">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-sm-flex py-2 ms-2">
                <h4 class="fw-bold mb-0">
                    Dashboard
                </h4>
            </div>
        </div>
    </div>

    <!-- Summary -->
    <div class="row">
        <div class="col-sm-6 col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-auto">
                            <div class="avatar flex-shrink-0">
                                <img src="~/assets/img/icons/unicons/book.png" alt="" class="rounded" />
                            </div>
                        </div>
                        <div class="col-auto">
                            <span class="d-block mb-1">Total Scan Barcode</span>
                            <h3 class="card-title text-nowrap mb-2">@Model.totalScan.Value.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-auto">
                            <div class="avatar flex-shrink-0">
                                <img src="~/assets/img/icons/unicons/categories.png" alt="" class="rounded" />
                            </div>
                        </div>
                        <div class="col-auto">
                            <span class="d-block mb-1">Total Pengaduan</span>
                            <h3 class="card-title text-nowrap mb-2">@Model.totalPengaduan.Value.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-auto">
                            <div class="avatar flex-shrink-0">
                                <img src="~/assets/img/icons/unicons/user.png" alt="" class="rounded" />
                            </div>
                        </div>
                        <div class="col-auto">
                            <span class="d-block mb-1">Total Produk</span>
                            <h3 class="card-title text-nowrap mb-2">@Model.totalProduct.Value.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <!-- Last Scan -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title m-0 me-2">Scan Barcode Terbaru</h5>
                    <div class="text-end">
                        <a href="~/Admin/Scan" class="btn btn-sm btn-outline-success rounded-pill px-3">Lihat Lainnya</a>
                    </div>

                </div>
                <div class="card-body">
                    <ul class="p-0 m-0">

                        @foreach (LogScanningDTO data in Model.logScanning)
                        {
                            <li class="row mb-4 pb-1">
                                <div class="col-4">
                                    <small class="text-muted d-block mb-1">Waktu Scan</small>
                                    <h6 class="mb-0">@data.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</h6>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted d-block mb-1">Kode QR</small>
                                    <h6 class="mb-0">@data.qrNo</h6>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted d-block mb-1">Lokasi Scan</small>
                                    <h6 class="mb-0">@data.kabupaten</h6>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Last Report -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title m-0 me-2">Pengaduan Terbaru</h5>
                    <div class="text-end">
                        <a href="~/Admin/Pengaduan" class="btn btn-sm btn-outline-success rounded-pill px-3">Lihat Lainnya</a>
                    </div>
                </div>
                <div class="card-body">
                    <ul class="p-0 m-0">
                        @foreach (ReportProductDTO data in Model.reportProduct)
                        {
                            <li class="row mb-4 pb-1">
                                <div class="col-4">
                                    <small class="text-muted d-block mb-1">
                                        Tgl Laporan
                                    </small>
                                    <h6 class="mb-0">
                                        @data.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss").Trim()
                                    </h6>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted d-block mb-1">
                                        Nama Produk
                                    </small>
                                    <h6 class="mb-0">
                                        @data.namaProduk.Trim()
                                    </h6>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted d-block mb-1">Desc Pelapor</small>
                                    <h6 class="mb-0">
                                        @data.descPelapor.Trim()
                                    </h6>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>