@model WebApp.Models.SignInDTO

@{
    ViewData["Title"] = "Login | Lubes";
    Layout = "_Layout";
}


<section class="page-content login-section">
    <div class="row login-wrapper">
        <div class="col-md-7 bg-login text-center align-self-center">
            <img src="~/assets/img/auth_illustration_login.png" class="img-fluid img-login" alt="">
        </div>
        <div class="col-md-5 align-self-center">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <p class="card-text">
                        Selamat datang kembali, masukkan kredensial Anda untuk melanjutkan.
                    </p>
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="email" placeholder="Username / Email" asp-for="usernameOrEmail">
                            <label for="email">Username / Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" placeholder="Password" asp-for="password" onfocus="this.setAttribute('type', 'password')">
                            <label for="password">Password</label>
                        </div>
                        <div class="row justify-content-between mb-3">
                            <div class="col-auto">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="remember">
                                    <label class="form-check-label remember" for="remember">
                                        Ingat Saya
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">
                                    Login
                                </button>
                            </div>
                        </div>
                        <!-- Error Notif Here -->
                        @if (ViewBag.msg != null)
                        {
                            <div class="alert alert-danger mt-4" role="alert">
                                @ViewBag.msg
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger mt-4" style="visibility:hidden" role="alert">
                                &nbsp;
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>